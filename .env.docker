# Docker Deployment Environment Variables
# Copy this file to .env and configure before running docker-compose up

# =============================================================================
# Database Configuration
# =============================================================================
DB_NAME=hierarchical_agents
DB_USER=hierarchical
DB_PASSWORD=hierarchical123
DB_PORT=3306

# =============================================================================
# Server Configuration
# =============================================================================
PORT=8080
DEBUG=false

# =============================================================================
# AWS Bedrock Configuration
# =============================================================================
AWS_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=us.anthropic.claude-sonnet-4-20250514-v1:0

# Authentication Method 1: API Key (for local development)
# AWS_BEDROCK_API_KEY=your-api-key-here

# Authentication Method 2: IAM Role (for AWS deployment)
# USE_IAM_ROLE=true

# Authentication Method 3: AWS Credentials (optional)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_SESSION_TOKEN=your-session-token
